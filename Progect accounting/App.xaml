<Application x:Class="Progect_accounting.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Progect_accounting"
             StartupUri="Windows\Authorization.xaml">
    <Application.Resources>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Calibri"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Calibri"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Calibri"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="Background" Value="#FF79B9CE"/>
            <Setter Property="BorderBrush" Value="#FF3599B9"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <local:IntToStringConv x:Key="IntToStringConv"/>
    </Application.Resources>
</Application>
